<div class="card mt-5">
  <div class="card-body">
    <h1 class="mb-3">View / Edit Company Details</h1>
    <hr>
    <%= form_with(model: [:company, @company], url: company_update_company_info_path, method: :patch) do |form| %>
      <div class="form-group mb-3">
        <%= form.label :name, class: "mb-2 fw-bold" %>
        <%= form.text_field :name, class: "form-control form-control-lg" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :address, class: "mb-2 fw-bold" %>
        <%= form.text_field :address, class: "form-control form-control-lg" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :contact, class: "mb-2 fw-bold" %>
        <%= form.text_field :contact, class: "form-control form-control-lg" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :website, class: "mb-2 fw-bold" %>
        <%= form.text_field :website, class: "form-control form-control-lg" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :domain, class: "mb-2 fw-bold" %>
        <%= form.text_field :domain, class: "form-control form-control-lg" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :about, class: "mb-2 fw-bold" %>
        <%= form.text_area :about, class: "form-control form-control-lg", rows: "10" %>
      </div>

      <div class="form-group mb-3 mt-5">
        <%= form.submit "Update Company", class: "btn btn-primary btn-lg" %>
        <%= link_to "Public View", company_path(@company, public_view: 'yes'), class: "btn btn-outline-primary btn-lg", target: "_blank" %>
      </div>
    <% end %>
  </div>
</div>
